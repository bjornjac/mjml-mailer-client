{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "../common/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
